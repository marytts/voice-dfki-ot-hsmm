#Auto-generated config file for voice ${voiceName}

name = ${voiceName}
locale = ${voiceLocale}

####################################################################
####################### Module settings  ###########################
####################################################################
# For keys ending in ".list", values will be appended across config files,
# so that .list keys can occur in several config files.
# For all other keys, values will be copied to the global config, so
# keys should be unique across config files.

hmm.voices.list = ${voiceName}

# If this setting is not present, a default value of 0 is assumed.
voice.${voiceName}.wants.to.be.default = 0

# Set your voice specifications
voice.${voiceName}.gender = ${voiceGender}
voice.${voiceName}.locale = ${voiceLocale}
voice.${voiceName}.domain = general
voice.${voiceName}.samplingRate = ${voiceSamplingRate}

# HMM Voice-specific parameters 
# parameters used during models training 
# MGC: stage=gamma=0 alpha=0.42 linear gain (default) 
# LSP: gamma>0  
#          LSP: gamma=1 alpha=0.0  linear gain/log gain 
#      Mel-LSP: gamma=1 alpha=0.42 log gain 
#      MGC-LSP: gamma=3 alpha=0.42 log gain 
voice.${voiceName}.alpha = ${voiceAlpha}
voice.${voiceName}.gamma = ${voiceGamma}
voice.${voiceName}.logGain = false

# Parameter beta for postfiltering 
voice.${voiceName}.beta = ${voiceBeta}

# HMM Voice-specific files
# Information about trees
voice.${voiceName}.Ftd = jar:/marytts/voice/${voiceNameCamelCase}/tree-dur.inf
voice.${voiceName}.Ftf = jar:/marytts/voice/${voiceNameCamelCase}/tree-lf0.inf
voice.${voiceName}.Ftm = jar:/marytts/voice/${voiceNameCamelCase}/tree-mgc.inf
voice.${voiceName}.Fts = jar:/marytts/voice/${voiceNameCamelCase}/tree-str.inf

# Information about means and variances PDFs 
voice.${voiceName}.Fmd = jar:/marytts/voice/${voiceNameCamelCase}/dur.pdf
voice.${voiceName}.Fmf = jar:/marytts/voice/${voiceNameCamelCase}/lf0.pdf
voice.${voiceName}.Fmm = jar:/marytts/voice/${voiceNameCamelCase}/mgc.pdf
voice.${voiceName}.Fms = jar:/marytts/voice/${voiceNameCamelCase}/str.pdf

# Information about Global Mean and Variance PDFs
voice.${voiceName}.useGV = true
voice.${voiceName}.maxMgcGvIter = ${voiceMaxMgcGvIter}
voice.${voiceName}.maxLf0GvIter = ${voiceMaxLf0GvIter}
voice.${voiceName}.Fgvf = jar:/marytts/voice/${voiceNameCamelCase}/gv-lf0-littend.pdf
voice.${voiceName}.Fgvm = jar:/marytts/voice/${voiceNameCamelCase}/gv-mgc-littend.pdf
voice.${voiceName}.Fgvs = jar:/marytts/voice/${voiceNameCamelCase}/gv-str-littend.pdf

# A context features file example for start-up testing.
voice.${voiceName}.FeaFile = jar:/marytts/voice/${voiceNameCamelCase}/${voiceFeatureFile}.pfeats

# Tricky phones file in case there were problematic phones during training, empty otherwise.
voice.${voiceName}.trickyPhonesFile = jar:/marytts/voice/${voiceNameCamelCase}/trickyPhones.txt

# Information about Mixed Excitation
voice.${voiceName}.useMixExc = true

# Filters for mixed excitation 
# File format: one column with all the taps, where the number of taps per filter = numTaps/numFilters 
voice.${voiceName}.Fif = jar:/marytts/voice/${voiceNameCamelCase}/mix_excitation_filters.txt
# Number of filters in bandpass bank
voice.${voiceName}.in = 5

# Information about acousticModels (if true allows prosody modification specified in MARYXML input)
voice.${voiceName}.useAcousticModels = true

# acoustic models to use (HMM models or carts from other voices can be specified)
#(uncoment to allow prosody modification specified in MARYXML input)
voice.${voiceName}.acousticModels = duration F0

voice.${voiceName}.duration.model = hmm
voice.${voiceName}.duration.attribute = d

voice.${voiceName}.F0.model = hmm
voice.${voiceName}.F0.attribute = f0
